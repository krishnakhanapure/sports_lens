                        <select required id="tournamentType" name="tournamentType" class="input-xlarge form-control">
                            <option value="">--Select--</option>
                            <option value="International">International</option>
                            <option value="Domestic">Domestic</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Tournament Country:<span class="mandatory-field">*</span></label>
