    <title>Player Registration</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
          <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
          <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
          <link rel="stylesheet" type="text/css" href="/css/style2.css" />
          <link rel="icon" href="/images/001-shutter.png">
</head>
<body>

    <div class="logo-banner row">
        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3 logo-section-img">
          <a href="/homePage"><img src="/images/001-shutter-name.png"/></a>
        </div>
        <div class="col-lg-8 col-md-7 col-sm-3 col-xs-3">
          <p class="logo-name"></p>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3 logo-section-img user-section">
          <img src="/images/002-user.svg"/>
          <div>
            <p>Welcome, Admin</p>
            <p><a>Settings</a><a>Log Out</a></p>
          </div>
        </div>
    </div>


    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
        
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="alert alert-success">Success</h4>
            </div>
            <div class="modal-body">
              <p>Data Entered Successfully.</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
          
        </div>
    </div>

<div class="container">
    <div class="row">
         <form class="form-horizontal action-form newplayer" id="newPlayerDetails" action="newPlayerData" method="post" novalidate>

            <fieldset class="form-content">
                <!-- Address form -->
         
                <h3>New Player Registration</h3>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Player's Name:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
                        <input required name="playerFirstName" type="text" placeholder="Player's First Name*"
                        class="input-xlarge form-control" />
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
                        <input name="playerLastName" type="text" placeholder="Player's Last Name"
                        class="input-xlarge form-control" />
                    </div>
                </div>

                <!-- <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Player's Last Name:</label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <input required name="" type="text" placeholder="Player's Last Name"
                        class="input-xlarge form-control" />
                    </div>
                </div> -->

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Batting Style:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <select required id="" name="battingStyle" class="input-xlarge form-control">
                            <option value="">Select</option>
                            <option value="rightHandBatsman">Right Hand Batsman</option>
                            <option value="leftHandBatsman">Left Hand Batsman</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Bowling Style:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <select required id="" name="bowlingStyle" class="input-xlarge form-control">
                            <option value="">Select</option>
                            <option value="rightHandFast">Right Hand Fast</option>
                            <option value="leftArmFast">Left Arm Fast</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Team Name:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                         <select required id="" name="teamName" class="input-xlarge form-control">
                            <option value="">Select</option>
                            <option value="IND">INDIA</option>
                            <option value="Team2">Team 2</option>
                            <option value="Team3">Team 3</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Player Image:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <div class="input-group">
                          <div class="custom-file">
                            <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01" name="playerImage">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                          </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Player's Date of Birth:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                         <input required format="mm-dd-yyyy" id="" name="playerDOB" type="date" class="input-xlarge form-control" />
                    </div>
                </div>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Country of Origin:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                         <select required id="" name="playerCountry" class="input-xlarge form-control">
                            <option value="">Select</option>
                            <option value="IND">India</option>
                            <option value="AUS">Australia</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <input class="submitButton" type="submit" name="submitPlayer" id="submitPlayer" value="Submit" />
                </div>

            </fieldset>
        </form>
    </div>
</div>

<footer class="footer-section">
    <p>Copyright Â© 2018 SportsLens</p>
</footer>

</body>
</html>
