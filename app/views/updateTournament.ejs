<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <!-- This file has been downloaded from Bootsnipp.com. Enjoy! -->
    <title>Update Tournament</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
          <link rel="icon" href="/images/001-shutter.png">

          <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
          <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
          <link rel="stylesheet" type="text/css" href="/css/style2.css" />

          <script src="/js/script.js"></script>
          <script type="text/javascript">
            $('select').selectpicker();

          </script>
   
</head>
<body>

    <div class="logo-banner row">
        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3 logo-section-img">
          <a href="/homePage"><img src="/images/001-shutter-name.png"/></a>
        </div>
        <div class="col-lg-8 col-md-7 col-sm-3 col-xs-3">
          <p class="logo-name"></p>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3 logo-section-img user-section">
          <img src="/images/002-user.svg"/>
          <div>
            <p>Welcome, Admin</p>
            <p><a>Settings</a><a>Log Out</a></p>
          </div>
        </div>
    </div>

<div class="container">
    <div class="row">
         <form class="form-horizontal action-form tournament-section" action="updateTournamentDetails" method="post" id="updateTournamentDetails">

            <fieldset class="form-content">
                <!-- Address form -->
         
                <h3>Update Tournament Details</h3>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12"><b>Select a Tournament To Update:</b></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <select required id="teamid" name="teamid" class="input-xlarge form-control" onchange="getTournamentDetails(this.value);">
                            tournamentList
                             <option value="">--Select--</option>
                            <% for(var i=0; i<tournamentList[0].length; i++) {%>
                               <%if (tournamentList[0][i].tournament_name.length > 0) { %>
                                    <option value=<%= tournamentList[0][i].tournament_id %>><%= tournamentList[0][i].tournament_name %></option>
                                       
                               <% } %>
                            <% } %>
                        </select>
                    </div>
                </div><br/><br/>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Tournament Name:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <input required name="tournamentName" id="tournamentName" type="text" placeholder="Tournament Name"
                        class="input-xlarge form-control" />
                    </div>
                </div>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Tournament Type:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <select required id="tournamentType" name="tournamentType" class="input-xlarge form-control">
                            <option value="">--Select--</option>
                            <option value="International">International</option>
                            <option value="Domestic">Domestic</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Tournament Country:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <select required id="tournamentCountry" name="tournamentCountry" class="input-xlarge form-control">
                            <option value="">--Select--</option>
                            <% for(var i=0; i<countryList[0].length; i++) {%>
                               <%if (countryList[0][i].country_code.length > 0) { %>
                                    <option value=<%= countryList[0][i].country_code %>><%= countryList[0][i].country_name %></option>      
                               <% } %>
                            <% } %>
                        </select>
                    </div>
                </div>

                <div class="row multi-select-section">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Teams in the Tournament:</label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <select name="tournamentTeam" id="tournamentTeam" class="selectpicker" multiple data-live-search="true" required>
                            <% for(var i=0; i<teamsList[0].length; i++) {%>
                               <%if (teamsList[0][i].team_code.length > 0) { %>
                                    <option value=<%= teamsList[0][i].team_code %>><%= teamsList[0][i].team_name %></option>
                                       
                               <% } %>
                            <% } %>
                        </select>
                    </div>
                </div> 

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">Start Date:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                         <input required format="mm-dd-yyyy" id="tournamentStart" name="tournamentStart" type="date" class="input-xlarge form-control" />
                    </div>
                </div>

                <div class="row">
                    <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12">End Date:<span class="mandatory-field">*</span></label>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                         <input format="mm-dd-yyyy" id="tournamentEnd" name="tournamentEnd" type="date" class="input-xlarge form-control"/>
                    </div>
                </div>

                <div class="row">
                    <input class="submitButton" type="submit" name="" id="" value="Update">
                </div>

            </fieldset>
        </form>
    </div>
</div>

<footer class="footer-section">
    <p>Copyright Â© 2018 SportsLens</p>
</footer>

</body>
</html>
